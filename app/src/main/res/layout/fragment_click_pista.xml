<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   tools:context=".aplicacion.ui.home.tresClickPista.ClickPista">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toStartOf="@+id/imagenPista"
            app:layout_constraintBottom_toBottomOf="@+id/imagenPista">
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/nombrePista" android:layout_marginBottom="25dp"/>
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/precioAlquiler"/>
    </LinearLayout>
    <ImageView
            android:layout_width="235dp"
            android:layout_height="203dp" tools:src="@tools:sample/avatars" android:id="@+id/imagenPista"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/descripcionPista"
            app:layout_constraintTop_toBottomOf="@+id/imagenPista" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            android:gravity="center"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:id="@+id/linearLayout" android:padding="25dp">
        <Button
                android:text="back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/backClickPista" android:layout_weight="1"
                android:layout_marginEnd="25dp"/>
        <Button
                android:text="selec. dia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/okClickPista" android:layout_weight="1"
                android:layout_marginStart="25dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>