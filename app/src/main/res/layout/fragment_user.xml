<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   tools:context=".aplicacion.ui.user.UserFragment">

    <ImageView
            android:layout_width="125dp"
            android:layout_height="125dp" tools:src="@drawable/ic_baseline_person_24" android:id="@+id/iv_pfp_uprofile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="35dp" android:layout_marginEnd="35dp" android:layout_marginStart="35dp"/>
    <TextView
            android:text="Username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tv_username_uprofile"
            app:layout_constraintTop_toBottomOf="@+id/iv_pfp_uprofile" app:layout_constraintEnd_toEndOf="@+id/iv_pfp_uprofile"
            app:layout_constraintStart_toStartOf="@+id/iv_pfp_uprofile" android:layout_marginTop="20dp"
            android:textSize="24sp"/>
    <TextView
            android:text="E - mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tv_email_uprofile"
            app:layout_constraintEnd_toEndOf="@+id/iv_pfp_uprofile"
            app:layout_constraintTop_toBottomOf="@+id/tv_username_uprofile"
            app:layout_constraintStart_toStartOf="@+id/iv_pfp_uprofile" android:layout_marginTop="20dp"/>
    <TextView
            android:text="Info"
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/tv_infouser_uprofile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/tv_email_uprofile"
            android:layout_marginTop="20dp" android:layout_marginEnd="35dp" android:layout_marginStart="35dp"
            app:layout_constraintBottom_toTopOf="@+id/button_darse_de_baja_uprofile"
            android:layout_marginBottom="35dp"/>
    <Button
            android:text="Delete Account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button_darse_de_baja_uprofile"
            app:layout_constraintEnd_toEndOf="@+id/tv_infouser_uprofile"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toStartOf="@+id/tv_infouser_uprofile"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="25dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>